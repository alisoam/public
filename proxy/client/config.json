{
    "log": {
        "access": "error",
        "loglevel": "error"
    },
    "inbounds": [
        {
            "port": 2080,
            "listen": "0.0.0.0",
            "protocol": "socks",
            "settings": {
                "udp": true
            }
        },
        {
            "port": 2081,
            "listen": "0.0.0.0",
            "protocol": "http"
        }
    ],
    "outbounds": [
        {
            "protocol": "trojan",
            "tag": "proxy",
            "settings": {
                "servers": [
                    {
                        "address": "server-forwarder",
                        "port": 4443,
                        "password": "${PASSWORD}"
                    }
                ]
            },
            "streamSettings": {
                "network": "ws",
                "security": "tls",
                "wsSettings": {
                    "headers": {
                        "Host": "${SERVER}"
                    },
                    "path": "/v2ray/trojan"
                },
                "tlsSettings": {
                    "serverName": "${SERVER}",
                    "allowInsecure": false
                },
                "sockopt": {
                    "dialerProxy": "fragment",
                    "tcpKeepAliveIdle": 1,
                    "tcpNoDelay": true
                }
            },
            "mux": {
                "enabled": false
            }
        },
        {
            "tag": "fragment",
            "protocol": "freedom",
            "settings": {
                "domainStrategy": "AsIs",
                "fragment": {
                    "packets": "1-5",
                    "length": "100-200",
                    "interval": "10-20"
                }
            },
            "streamSettings": {
                "sockopt": {
                    "tcpKeepAliveIdle": 1,
                    "tcpNoDelay": true
                }
            }
        },
        {
            "tag": "direct",
            "protocol": "socks",
            "settings":{
                "servers": [
                    {
                        "address": "direct-proxy",
                        "port": 2080
                    }
                ],
                "streamSettings": {
                    "network": "tcp",
                    "security": "none",
                    "tcpSettings": {},
                    "sockopt": {
                        "tcpKeepAliveInterval": 5,
                        "tcpKeepAliveIdle": 2,
                        "tcpFastOpen": true,
                        "tcpNoDelay": true,
                        "tcpUserTimeout": 300
                    }
                }
            },
            "mux": {}
        }
    ],
    "dns": {
        "hosts": {
            "dns.google": ["8.8.8.8", "8.8.4.4"],
            "8.8.8.8": "8.8.8.8",
            "1.1.1.1": "1.1.1.1"
        },
        "servers": [
            {
                "address": "localhost",
                "skipFallback": true,
                "finalQuery": true,
                "domains": [
                   "server-forwarder",
                   "dns-forwarder"
               ]
            },
            {
                "address": "dns-forwarder",
                "port": 5553,
                "skipFallback": true,
                "finalQuery": true,
                "domains": [
                    "geosite:cloudflare",
                    "domain:ir",
                    "regexp:^.+\\.ir$",
                    "geosite:category-ir",
                    "domain:divar.cloud",
                    "domain:divar.dev",
                    "domain:divarcdn.com",
                    "domain:digikala.com",
                    "domain:aparat.com",
                    "domain:filimo.com",
                    "domain:torob.com",
                    "domain:snapp.taxi"
                ]
            },
            {
                "address": "https://8.8.8.8/dns-query",
                "timeoutMs": 20000
            },
            {
                "address": "https://1.1.1.1/dns-query",
                "timeoutMs": 20000
            }
        ],
        "disableFallbackIfMatch": true,
        "disableCache": false
    },
    "routing": {
        "domainStrategy": "IPOnDemand",
        "rules": [
            {
                "type": "field",
                "outboundTag": "proxy",
                "domain": [
                    "1.1.1.1",
                    "8.8.8.8"
                ]
            },
            {
                "type": "field",
                "outboundTag": "proxy",
                "ip": [
                    "1.1.1.1",
                    "8.8.8.8"
                ]
            },
            {
                "type": "field",
                "outboundTag": "direct",
                "domain": [
                    "geosite:cloudflare",
                    "domain:ir",
                    "regexp:^.+\\.ir$",
                    "geosite:category-ir",
                    "domain:divar.cloud",
                    "domain:divar.dev",
                    "domain:divarcdn.com",
                    "domain:digikala.com",
                    "domain:aparat.com",
                    "domain:filimo.com",
                    "domain:torob.com",
                    "domain:snapp.taxi"
                ]
            },
            {
                "type": "field",
                "outboundTag": "direct",
                "ip": [
                    "geoip:private",
                    "geoip:ir"
                ]
            }
        ]
    }
}
